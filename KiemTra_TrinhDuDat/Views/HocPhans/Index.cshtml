@model IEnumerable<KiemTra_TrinhDuDat.Models.HocPhan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaHP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenHP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoTinChi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaHP)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenHP)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SoTinChi)
    </td>
    <td>
      <div class="DatMua">
          <a class="btn btn-success" href="@Url.Action("ThemGioHang", "GioHang",
            new { @id = item.MaHP, @strURL = Request.Url.ToString() })">Đăng ký</a>
      </div>
    </td>
</tr>
}

</table>
